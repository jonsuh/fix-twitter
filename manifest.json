{
	"name": "Fix Twitter",
	"version": "1.0",
	"manifest_version": 2,
	"author": "Jonathan Suh <hello@jonsuh.com>",
	"description": "Fix dumb things about Twitter and TweetDeck on the web (e.g. t.co links, list of people in replies)",
	"homepage_url": "https://github.com/jonsuh/fix-twitter/",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"32": "icon32.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/*",
				"https://tweetdeck.twitter.com/*"
			],
			"js": ["background.js"],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
